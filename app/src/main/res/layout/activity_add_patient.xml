<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddPatient">

    <EditText
        android:id="@+id/patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Patient Name"
        android:textSize="20sp"
        android:padding="16dp"/>
    <EditText
        android:id="@+id/doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Doctor Name"
        android:textSize="20sp"
        android:padding="16dp"/>
    <EditText
        android:id="@+id/clinic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Clinic Name"
        android:textSize="20sp"
        android:padding="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Application Status"
        android:textSize="20sp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <RadioButton android:id="@+id/active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:onClick="RadioButtonClicked"/>
        <RadioButton android:id="@+id/inactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inactive"
            android:textSize="16sp"
            android:onClick="RadioButtonClicked"/>
    </RadioGroup>
    <EditText
        android:id="@+id/disease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Diagnosed With"
        android:textSize="20sp"
        android:padding="16dp"/>

    <EditText
        android:id="@+id/rect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recommanded Treatment"
        android:textSize="20sp"
        android:padding="16dp"/>

    <EditText
        android:id="@+id/pret"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Previous Treatment"
        android:textSize="20sp"
        android:padding="16dp" />
    <EditText
        android:id="@+id/bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Billing Amount"
        android:textSize="20sp"
        android:padding="16dp"/>
    <EditText
        android:id="@+id/insaurance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insaurance Company Email"
        android:textSize="20sp"
        android:padding="16dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Submit"
        android:textSize="20sp"
        android:layout_margin="24dp"
        android:onClick="addToDb"/>

</LinearLayout>
</ScrollView>